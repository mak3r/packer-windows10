{
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": false,
      "boot_wait": "5m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "2h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "Windows7",
      "disk_size": 61440,
      "floppy_files": [
        "{{user `autounattend`}}",
		"./scripts/dis-updates.ps1",
		"./scripts/hotfix-KB3102810.bat",
        "./scripts/openssh.ps1",
        "./scripts/oracle-cert.cer"
      ],
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
		[ "modifyvm", "{{.Name}}", "--vram", "256" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/vagrant-ssh.bat",
        "./scripts/enable-rdp.bat"
      ]
    },
	{
      "type": "powershell",
      "scripts": [
        "./scripts/removeapp.ps1"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "win7_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_10.template"
    }
  ],
  "variables": {
    "iso_url": "./iso/en_windows_10_multiple_editions_version_1607_updated_jul_2016_x64_dvd_9058187.iso",
    "iso_checksum_type": "sha1",
    "iso_checksum": "99FD8082A609997AE97A514DCA22BECF20420891",
    "autounattend": "./answer_files/7/Autounattend.xml"
  }
}
